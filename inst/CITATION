citHeader("To cite synthACS in publications use:")

citEntry(entry = "Article",
  title        = "{synthACS}: Spatial MicroSimulation Modeling with Synthetic American Community Survey Data",
  author       = person(given = "Alex",
                        family = "Whitworth",
                        email = "whitworth.alex@gmail.com"),
  journal      = "Journal of Statistical Software",
  year         = "2022",
  volume       = "104",
  number       = "7",
  pages        = "1--30",
  doi          = "10.18637/jss.v104.i07",

  textVersion  =
  paste("Alex Whitworth. (2022)",
        "synthACS: Spatial MicroSimulation Modeling with Synthetic American Community Survey Data.",
        "Journal of Statistical Software, Forthcoming 7(104), 1-30."
  )
#         "URL TBD.")
)
